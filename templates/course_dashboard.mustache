{{!
  @template lytix_config/course_dashboard

  Lytix Course Dashboard view.

  The purpose of this template is to show the course dashboard.

  Classes required for JS:
  * lytix_planner/planner
  * lytix_completions/activity_completion
  * lytix_timeoverview/timeoverview

  Context variables required for this template:
  See example below.

  Example context (json):
  {
      "contextid": 0,
      "courseid": 0,
      "userid": 0,
      "isteacher": 0
  }
}}

<div id="lytix" class="row">

    <div class='col-12 mb-4 pr-sm-0'>{{> lytix_measure/widget }}</div>

    <div class='col-12 mb-4'>{{> lytix_planner/widget }}</div>

    {{#isteacher}}
    <div class='col-12 mb-4'>{{> lytix_timeoverview/widget }}</div>

    <div class='col-12 mb-4'>{{> lytix_completions/widget }}</div>

    <div class='col-12'>{{> lytix_timedetail/widget }}</div>
    {{/isteacher}}

</div>

{{> lytix_config/unload }}
