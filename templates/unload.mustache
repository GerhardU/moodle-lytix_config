{{!
  @template lytix_config/learners_corner

  Lytix Unload Snippet

  This embeds some JS to log when the page is left.

  Classes required for JS:
  * lytix_logs/logs

  Context variables required for this template:
  See example below.

  Example context (json):
  {
      "contextid": 0,
      "courseid": 0,
      "userid": 0
  }
}}
{{#js}}
    require(['lytix_logs/logs'], function(m) {
        window.addEventListener('beforeunload', function() {
            m.addActionLog({{userid}}, {{courseid}}, {{contextid}}, null, 'UNLOAD', 'PAGE');
        });
    });
{{/js}}
